test -n "$2" || {
    echo "Usage: $0 <input> <output> [<pixels>]" >&2
    exit 1
}

in=$1 && shift
out=$1 && shift 
test -n "$1" && size=$1 && shift || size=128

player=/usr/local/gnash-dump/bin/dump-gnash

#echo ${in} ${out} ${size} 

# TODO: 
#  - security:
#    - forbid loads
#    - forbid using shared memory (LocalConnection)
#    - forbid writing SharedObjects
#    - reduce AS timeouts
#  - correctness:
#    - use size !
#
export GNASHRC=${GNASHRC}:/usr/local/gnash-dump/etc/gnashthumbnailrc
${player} --screenshot last --screenshot-file ${out} ${in} \
    --max-advances=100 --timeout=100 --width=${size} --height=${size} \
    -r1 \
    > /dev/null 2>&1
